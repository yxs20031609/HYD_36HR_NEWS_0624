<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/fragment_ui_margin"
    android:orientation="horizontal">

    <View
        android:id="@+id/category_items_type"
        android:layout_width="2dp"
        android:layout_height="@dimen/welcome_log"
        android:layout_marginLeft="@dimen/fragment_ui_margin"
        android:background="@color/choosechannel_red"></View>
    <TextView
        android:layout_marginLeft="@dimen/fragment_ui_margin"
        android:id="@+id/category_items_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/tab_radiogroup_textcolor_selector"
        android:textSize="@dimen/category_textsize"/>
</LinearLayout>