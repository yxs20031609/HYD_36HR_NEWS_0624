<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_list_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/news_item_img"
        android:layout_width="@dimen/middle_height"
        android:layout_height="@dimen/middle_height"
        android:layout_margin="@dimen/fragment_ui_margin"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/middle_height"
        android:layout_marginTop="@dimen/fragment_ui_margin">

        <TextView
            android:id="@+id/news_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:text="@string/app_name"
            android:textSize="@dimen/item_news_titlesiez" />

        <TextView
            android:id="@+id/news_item_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/small_margin"
            android:text="@string/tag"
            android:textColor="@color/choosechannel_red"
            android:textSize="@dimen/item_news_normalsiez" />

        <TextView
            android:id="@+id/news_item_auther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/tag"
            android:textSize="@dimen/item_news_normalsiez" />

        <TextView
            android:id="@+id/news_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/fragment_ui_margin"
            android:layout_toRightOf="@id/news_item_auther"
            android:text="@string/tag"
            android:textSize="@dimen/item_news_normalsiez" />


    </RelativeLayout>

</LinearLayout>